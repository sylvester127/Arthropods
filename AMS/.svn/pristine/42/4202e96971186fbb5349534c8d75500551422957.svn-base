<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.DetailFeeding">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_column="0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="5dp"
                android:text="@string/detail_tv_recent_fed_date" />

            <TextView
            android:id="@+id/tv_late_fed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        </LinearLayout>

        <Button
            android:id="@+id/ib_fed"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_detail_favorite_border"
            android:text="fed"
            android:textColor="@android:color/tab_indicator_text"
            android:textSize="12sp"
            app:layout_column="1"
            app:layout_gravity="right"
            app:layout_row="0"
            app:layout_rowSpan="2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_columnSpan="2"
            app:layout_row="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="@string/detail_tv_starve_date" />

            <TextView
                android:id="@+id/tv_hungry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </android.support.v7.widget.GridLayout>

    <CheckBox
        android:id="@+id/cb_postpone_fed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:checked="false"
        android:text="@string/detail_stop_fed"
        android:textColor="@android:color/tab_indicator_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="@string/detail_fed" />

        <EditText
            android:id="@+id/et_fed_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="2"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="5dp"
            android:gravity="center_vertical"
            android:text="@string/detail_postpone_fed" />

        <EditText
            android:id="@+id/et_postpone_fed_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_edit_text"
            android:ems="2"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

</LinearLayout>