<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sylvester.ams">
    <uses-permission android:name = "android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_tarantula"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_tarantula"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.Title">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controller.List"
            android:label="@string/title_activity_tarantula_drawer"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".controller.Detail"
            android:windowSoftInputMode="adjustResize"/>
    </application>
</manifest>
